@model IEnumerable<GamingGearConnectionString.NSX>
<!-- aside Widget -->
<div class="aside">
    <h3 class="aside-title">Thương hiệu</h3>
    <div class="checkbox-filter">
        @foreach (var item in Model)
        {
            <div class="input-checkbox">
                <a href="@Url.Action("Index",@item.MaNSX)">
                    <label for="brand-1">
                        <span></span>
                        @item.MaNSX
                        <small></small>
                    </label>
                </a>
            </div>
        }

    </div>
</div>
<!-- /aside Widget -->
