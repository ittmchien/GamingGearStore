                            <!-- /Wishlist -->
                            <!-- Cart -->
                            <div class="dropdown">
                                
                                <a class="dropdown-toggle" aria-expanded="true" href="@Url.Action("Index","Cart")">
                                    <i class="fa fa-shopping-cart"></i>

                                    <span>Giỏ hàng</span>
                                </a>

                            </div>
                            <!-- /Cart -->
                            <!-- Menu Toogle -->
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menu</span>
                                </a>
                            </div>
                            <!-- /Menu Toogle -->
                        </div>
                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>
    <!-- /HEADER -->
    <!-- NAVIGATION -->
    <nav id="navigation">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                    <li><a href="@Url.Action("Index","Store")">Tất cả sản phẩm</a></li>
                    <li><a href="@Url.Action("Index","MAINBOARD")">Bo mạch chủ - MAINBOARD</a></li>
                    <li><a href="@Url.Action("Index","CPU")">Bộ vi xử lý - CPU</a></li>

                    <li><a href="@Url.Action("Index","GPU")">Card màn hình - GPU</a></li>
                    <li><a href="@Url.Action("Index","RAM")">Bộ nhớ tạm thời - RAM</a></li>
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>
    <!-- /NAVIGATION -->
    @RenderBody()
    <!-- FOOTER -->
